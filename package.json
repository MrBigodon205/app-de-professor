{
  "name": "prof-acerta-3-1",
  "private": true,
  "version": "3.2.0",
  "author": "Prof Acerta",
  "description": "Plataforma oficial Prof. Acerta+ para Gestao Escolar",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "json-server --watch server/db.json --port 3001",
    "build-pc": "npm run build && electron-builder --win",
    "mobile:build": "npm run build && npx cap sync",
    "mobile:sync": "npx cap sync",
    "mobile:open": "npx cap open android",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "build": {
    "appId": "com.profacerta.web",
    "productName": "Prof. Acerta+",
    "win": {
      "target": "nsis",
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Prof. Acerta+"
    },
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.cjs",
      "assets/**/*",
      "public/logo.png"
    ],
    "electronVersion": "33.0.0",
    "directories": {
      "output": "release_v2"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.94.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/dompurify": "^3.0.5",
    "@types/nprogress": "^0.2.3",
    "@types/react-joyride": "^2.0.2",
    "@vercel/speed-insights": "^1.3.1",
    "canvas-confetti": "^1.9.4",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "docx": "^9.5.1",
    "docx-preview": "^0.3.7",
    "dompurify": "^3.3.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.26.1",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.562.0",
    "nprogress": "^0.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-easy-crop": "^5.5.6",
    "react-image-crop": "^11.0.10",
    "react-is": "^19.2.3",
    "react-joyride": "^2.9.3",
    "react-pdf": "^10.3.0",
    "react-quill-new": "^3.7.0",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.11.0",
    "react-webcam": "^7.2.0",
    "react-zoom-pan-pinch": "^3.7.0",
    "recharts": "^3.6.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.14.0",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "electron": "33.0.0",
    "electron-builder": "26.4.0",
    "electron-packager": "^17.1.2",
    "json-server": "^1.0.0-beta.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.2.0"
  }
}
